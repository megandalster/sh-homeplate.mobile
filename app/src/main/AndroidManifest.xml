<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sh.homeplate.mobile"
    android:versionCode="1"
    android:versionName="1.7" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/homeplate"
        android:label="@string/homeplate"
        android:name=".RouteControl"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".Welcome"
            android:label="@string/homeplate" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DriverSelect"
            android:label="@string/homeplate" />
        <activity
            android:name=".RouteView"
            android:label="@string/homeplate" />
        <activity
            android:name=".Summary"
            android:label="@string/homeplate" />
        <activity
            android:name=".Weight"
            android:label="@string/weight_entry_label"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name=".CreateStop"
            android:label="@string/label_new_stop"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SignOff"
            android:label="@string/homeplate"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
    </application>

</manifest>